<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.celpipcard">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="Sign in"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.CelpipCard">
        <activity android:name=".activity.SigninActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".activity.MainActivity"
            android:label="Home" >
        </activity>

        <activity
            android:name=".activity.CardlistActivity"
            android:label="Card List" >
        </activity>

        <activity
            android:name=".activity.PlaycardActivity"
            android:label="Practice" >
        </activity>

        <activity
            android:name=".activity.AddcardActivity"
            android:label="Add new card" >
        </activity>



    </application>
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
</manifest>